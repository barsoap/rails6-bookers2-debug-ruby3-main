<table>
  <% book.post_comments.each do |post_comment| %>
    <tr>
      <td> <!--ユーザー画像-->
        <%= link_to(post_comment.user) do %> <!--ユーザー画像-->
          <%= image_tag post_comment.user.get_profile_image, size:'50x50' %> <br>
          <%= post_comment.user.name %>
        <% end %>
      </td>
      <td> <!--コメント表示-->
        <%= post_comment.comment %>
      </td>
      <td> <!--コメント削除ボタン-->
        <% if post_comment.user == current_user %>
          <%= link_to 'Destroy', book_post_comment_path(@book, post_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>